@model AppCrudAdo.Models.Contacto
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Editar Contacto
    </div>


    <div class="card-body">
        <form action="@Url.Action("Editar", "Mantenedor")" method="post">
            <input name="IdContacto" type="hidden" value="@Model.IdContacto" class="form-control" />
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input name="Nombre" type="text" class="form-control" value="@Model.Nombre" />
            </div>

            <div class="mb-3">
                <label class="form-label">Telefono</label>
                <input name="Telefono" type="text" class="form-control" value="@Model.Telefono" />
            </div>

            <div class="mb-3">
                <label class="form-label">Correo</label>
                <input name="Correo" type="text" class="form-control" value="@Model.Correo" />
            </div>

            <button type="submit" class="btn btn-primary">Editar</button>
            <a href="@Url.Action("Listar", "Mantenedor")" class="btn btn-success">Cancelar</a>
        </form>
    </div>
</div>

